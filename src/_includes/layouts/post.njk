---
layout: default
---

<section>

  <article class="mx-auto prose md:prose-lg lg:prose-xl">

    <time value="{{ date }}" class="text-sm text-gray-600">Last updated: {{ date | readableDate }}</time>
    <h1 class="mt-6">{{ title }}</h1>

    {% if content | toc %}
      <aside>
        {{ content | toc | safe }}
      </aside>
    {% endif %}

    {% myResponsiveImage img,
    "alt2", "webp, jpeg", "w-full rounded-lg" %}
    {# <img alt="" class="rounded-lg" src="{{img}}"/> #}
    <div class="mt-6 text-2xl text-gray-500 flow">
      {{ teaser | safe }}
    </div>
    <em class="text-sm text-gray-600 block">Reading time: {{content | readingTime}}</em>
    <div class="mt-8 flow">
      {{ content | safe }}
    </div>
  </article>

  <nav class="mx-auto mt-16 flow">
    <a href="{{ '/blog/' | url }}">← Blog index</a>
  </nav>

</section>