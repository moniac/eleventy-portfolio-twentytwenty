---
title: test
pagination:
  data: collections.posts
  size: 5
  alias: list
  reverse: true
  permalink: '<% if (pagination.pageNumber > 0) { %><%= `page${pagination.pageNumber + 1}/blog.html` %><% } else { %>blog.html<% } %>'
eleventyComputed:
  title: '<% if (pagination.pageNumber > 0) { %><%= `Page ${pagination.pageNumber + 1} | ${site.title}` %><% } else { %><%= site.title %><% } %>'
---


<h1 class="font-bold text-3xl">Recent posts</h1>
<section class="text-gray-700 body-font">
<div class="container py-24 mx-auto">
  <div class="grid md:grid-flow-dense grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% list.forEach((post) => { %>
    <div class="">
      <div class="h-full border-2 border-gray-200 rounded-lg overflow-hidden">
          <img class="h-64 md:h-48 lg:h-56 w-full object-cover object-center" src="<%= post.data.img %>" alt="blog">
          <div class="p-6">
            <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1">CATEGORY</h2>
            <h1 class="title-font text-lg font-medium text-gray-900 mb-3"><%= post.data.title %></h1>
            <p class="leading-relaxed mb-3">Photo booth fam kinfolk cold-pressed sriracha leggings jianbing microdosing tousled waistcoat.</p>
            <div class="flex items-center flex-wrap ">
              <a href="<%= post.url %>" class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0">Learn More
                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
    </div>
  <% }) %>
  </div>
</div>
</section>

<div class="pt-3">
  <% if (pagination.previous) { %>
  <a href="<%= pagination.previous.replace(/blog.html$/, "") %>">Newer Posts</a>
  <% } %> <% if (pagination.next) { %>
  <a href="<%= pagination.next.replace(/blog.html$/, "") %>">Older Posts</a>
  <% } %>
</div>